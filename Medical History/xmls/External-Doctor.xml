<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!DOCTYPE Doctor [
    <!ELEMENT Doctor (name | surname | specialty | Patients | Hospitals)>
    <!ATTLIST Doctor doctor_id CDATA #REQUIRED
                     contact CDATA #REQUIRED
                     username CDATA #REQUIRED>                      
    <!ELEMENT name (#PCDATA)>
    <!ELEMENT surname (#PCDATA)>
    <!ELEMENT specialty (#PCDATA)>
    <!ELEMENT Patients (Patient+)>
    <!ATTLIST Patient patientName CDATA #REQUIRED
                      dateofbirth CDATA #REQUIRED
                      email CDATA #REQUIRED>

    <!ELEMENT Hospitals (Hospital+)> 
    <!ATTLIST Hospital hospitalName CDATA #REQUIRED
                     hospitalAddress CDATA #REQUIRED>
]>

<Doctor doctor_id="123" contact="johndoe@gmail.com" username="drjohndoe">
    <name>John</name>
    <surname>Doe</surname>
    <specialty>Cardiology</specialty>
    <Patients>
        <Patient patientName="Jane Smith" dateofbirth="1990-01-01" email="jane.smith@gmail.com"/>
        <Patient patientName="Bob Brown" dateofbirth="1985-05-23" email="bob.brown@gmail.com"/>
    </Patients>
    <Hospitals>
        <Hospital hospitalName="City Hospital" hospitalAddress="123 Main St"/>
        <Hospital hospitalName="County Hospital" hospitalAddress="456 Elm St"/>
    </Hospitals>
</Doctor>
