<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!DOCTYPE Patient [
    <!ELEMENT Patient (patientName | Allergies | Doctors)>
    <!ATTLIST Patient patientID CDATA #REQUIRED
                      dateofbirth CDATA #REQUIRED
                      bloodtype CDATA #REQUIRED
                      email CDATA #REQUIRED
                      username CDATA #REQUIRED>
                      
    <!ELEMENT patientName (#PCDATA)>
    <!ELEMENT Allergies (Allergy+)>
    <!ATTLIST Allergy allergiesID CDATA #REQUIRED
                      allergiesName CDATA #REQUIRED>
                      
    <!ELEMENT Doctors (Doctor+)> 
    <!ATTLIST Doctor name CDATA #REQUIRED
                     surname CDATA #REQUIRED
                     contact CDATA #REQUIRED
                     specialty CDATA #REQUIRED>
]>
<Patient patientID="456" dateofbirth="1992-06-15" bloodtype="O+" email="james.bond@gmail.com" username="patient456">
    <patientName>John Doe</patientName>
    <Allergies>
        <Allergy allergiesID="001" allergiesName="Peanuts"/>
        <Allergy allergiesID="002" allergiesName="Shellfish"/>
    </Allergies>
    <Doctors>
        <Doctor name="John" surname="Doe" contact="johndoe@gmail.com" specialty="Dermatology"/>
        <Doctor name="Mark" surname="Johnson" contact="mark.johnson@gmail.com" specialty="Pediatrics"/>
    </Doctors>
</Patient>
